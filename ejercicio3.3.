        <script>
            function multiplo3(){
                var num = document.getElementById("numero").value;
                var total = 0;
                for(var i=1; i<= num; i++){
                    if(i%3==0){
                        total = total + 1;
                    } 

                    document.getElementById("salida").innerHTML = "Los multiplos totales son " + total;   
                }
            }
        </script>    
        <label for="numero">NÃºmero:</label><input type="number" id="numero" onchange="calcular()">
        <input type="button" value="Calcular" onclick="multiplo3()">
        <span id="salida"></span>
    </body>
