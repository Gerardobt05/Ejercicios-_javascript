<html>
    <head><title>EJercicio 2.1.</title></head>
    <body>
        <h1>Ejercicio 1.2.</h1>
        <script>
            function calcular(){
                var temp = document.getElementById("temperatura").value;

                if(temp < 0){
                    console.log("Hielo");
                    document.getElementById("estado_id").innerHTML = "Hielo";
                }else if(temp < 100){
                    console.log("Liquido");
                    document.getElementById("estado_id").innerHTML = "Liquido";

                }else{
                    console.log("Gaseoso");
                    document.getElementById("estado_id").innerHTML = "Gaseoso";
                }
            }
        </script>    
        <label for="temperatura">Temperatura:</label><input type="number" id="temperatura" onchange="calcular()">
        <span id="estado_id"></span>
    </body>
</html>
